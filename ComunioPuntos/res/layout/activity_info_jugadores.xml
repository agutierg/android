<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/rlInfoJug"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/football_pitch_250" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llInfoJuga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <TabHost
            android:id="@+id/tabhostInfoJug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:alpha="0.7"
                    android:background="@color/blue_flojo"
                    android:padding="0dp" >

                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" >

                    <ScrollView
                        android:id="@+id/svLesion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" >

                        <TableLayout
                            android:id="@+id/tblLesion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:shrinkColumns="1" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="@string/lesionados"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </TableLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/svDuda"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" >

                        <TableLayout
                            android:id="@+id/tblDuda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:shrinkColumns="1" >

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="@string/duda"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </TableLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/svAcumulacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" >

                        <TableLayout
                            android:id="@+id/tblAcumulacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:shrinkColumns="1" >

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="@string/acumulacion"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </TableLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/sv2Amarillas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" >

                        <TableLayout
                            android:id="@+id/tbl2Amarillas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:shrinkColumns="1" >

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="@string/amarillas"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </TableLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/svRoja"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" >

                        <TableLayout
                            android:id="@+id/tblRoja"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:shrinkColumns="1" >

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="@string/roja"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </TableLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/svNoConvocado"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" >

                        <TableLayout
                            android:id="@+id/tblNoConvocado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:shrinkColumns="1" >

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="@string/noconvocados"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </TableLayout>
                    </ScrollView>

                    <ScrollView
                        android:id="@+id/svFilial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" >

                        <TableLayout
                            android:id="@+id/tblFilial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:shrinkColumns="1" >

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="@string/filial"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </TableLayout>
                    </ScrollView>
                </FrameLayout>
            </LinearLayout>
        </TabHost>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.7"
        android:background="@drawable/barra54"
        android:gravity="top|center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnVolverIJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/volver"
            android:src="@drawable/return64" />

        <ImageView
            android:id="@+id/btnPosPuntIJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/posPunt"
            android:src="@drawable/posibles_puntos" />

        <ImageView
            android:id="@+id/btnRssIJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/jornada"
            android:src="@drawable/jornada64" />

        <ImageView
            android:id="@+id/btnJornadaIJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/resulDir"
            android:src="@drawable/resultados_dir60" />

        <ImageView
            android:id="@+id/btnAyudaIJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/herramientas"
            android:src="@drawable/help64" />

        <ImageView
            android:id="@+id/btnInfoIJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/informacion"
            android:src="@drawable/info64" />
    </LinearLayout>

</RelativeLayout>