<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/football_pitch_250" >

    <TabHost
        android:id="@+id/tabhostJorn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:alpha="0.7" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/blue_f" >

            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <ScrollView
                    android:id="@+id/svResultados"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <WebView
                        android:id="@+id/wvResultados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.8" />

                </ScrollView>

                <ScrollView
                    android:id="@+id/svClasificacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <WebView
                        android:id="@+id/wvClasificacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.8" />

                </ScrollView>

                <ScrollView
                    android:id="@+id/svProxJorn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <WebView
                        android:id="@+id/wvProxJorn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.8" />

                </ScrollView>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:alpha="0.7"
        android:background="@drawable/barra54"
        android:gravity="top|center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnVolverJO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/volver"
            android:src="@drawable/return64" />

        <ImageView
            android:id="@+id/btnPosPuntJO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/posPunt"
            android:src="@drawable/posibles_puntos" />

        <ImageView
            android:id="@+id/btnRssJO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/jornada"
            android:src="@drawable/jornada64" />

        <ImageView
            android:id="@+id/btnAyudaJO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/herramientas"
            android:src="@drawable/help64" />

        <ImageView
            android:id="@+id/btnInfoJO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/informacion"
            android:src="@drawable/info64" />
    </LinearLayout>

</RelativeLayout>